<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/calculation"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="120dp"
        android:textAlignment="textEnd"
        android:textColor="@color/white"
        android:textSize="56dp"
        android:textStyle="bold"
        android:backgroundTint="@color/buttonPressed"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <EditText
        android:id="@+id/result"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="5dp"
        android:textAlignment="textEnd"
        android:textColor="@color/white"
        android:textSize="56dp"
        android:textStyle="bold"
        android:backgroundTint="@color/buttonPressed"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/calculation"/>
    
    <Button
        android:id="@+id/btnAC"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:background="@drawable/button"
        android:text="C"
        android:textStyle="bold"
        android:textSize="30sp"
        android:textColor="@color/white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/result"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="40dp"/>

    <Button
        android:id="@+id/btnPercent"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:background="@drawable/button"
        android:text="%"
        android:textStyle="bold"
        android:textSize="30sp"
        android:textColor="@color/white"
        android:layout_marginRight="5dp"
        app:layout_constraintLeft_toRightOf="@id/btnAC"
        app:layout_constraintTop_toTopOf="@id/btnAC"/>

    <Button
        android:id="@+id/btnDel"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:background="@drawable/button"
        android:text="DEL"
        android:textStyle="bold"
        android:textSize="30sp"
        android:textColor="@color/white"
        android:layout_marginRight="5dp"
        app:layout_constraintLeft_toRightOf="@id/btnPercent"
        app:layout_constraintTop_toTopOf="@id/btnAC"/>

    <Button
        android:id="@+id/btnDiv"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:background="@drawable/button"
        android:text="รท"
        android:textStyle="bold"
        android:textSize="30sp"
        android:textColor="@color/BtnFunction"
        app:layout_constraintLeft_toRightOf="@id/btnDel"
        app:layout_constraintTop_toTopOf="@id/btnDel"
        />

    <Button
        android:id="@+id/btn7"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:background="@drawable/button"
        android:text="7"
        android:textStyle="bold"
        android:textSize="30sp"
        android:textColor="@color/white"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnAC"/>

    <Button
        android:id="@+id/btn8"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:background="@drawable/button"
        android:text="8"
        android:textStyle="bold"
        android:textSize="30sp"
        android:textColor="@color/white"
        app:layout_constraintLeft_toRightOf="@id/btn7"
        app:layout_constraintTop_toTopOf="@id/btn7"
        />

    <Button
        android:id="@+id/btn9"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:background="@drawable/button"
        android:text="9"
        android:textStyle="bold"
        android:textSize="30sp"
        android:textColor="@color/white"
        app:layout_constraintLeft_toRightOf="@id/btn8"
        app:layout_constraintTop_toTopOf="@id/btn8"
        />

    <Button
        android:id="@+id/btnMultiply"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:background="@drawable/button"
        android:text="ร"
        android:textStyle="bold"
        android:textSize="30sp"
        android:textColor="@color/BtnFunction"
        app:layout_constraintLeft_toRightOf="@id/btn9"
        app:layout_constraintTop_toTopOf="@id/btn9"
        />

    <Button
        android:id="@+id/btn4"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:background="@drawable/button"
        android:text="4"
        android:textStyle="bold"
        android:textSize="30sp"
        android:textColor="@color/white"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn7"/>

    <Button
        android:id="@+id/btn5"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:background="@drawable/button"
        android:text="5"
        android:textStyle="bold"
        android:textSize="30sp"
        android:textColor="@color/white"
        app:layout_constraintLeft_toRightOf="@id/btn4"
        app:layout_constraintTop_toTopOf="@id/btn4"
        />

    <Button
        android:id="@+id/btn6"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:background="@drawable/button"
        android:text="6"
        android:textStyle="bold"
        android:textSize="30sp"
        android:textColor="@color/white"
        app:layout_constraintLeft_toRightOf="@id/btn5"
        app:layout_constraintTop_toTopOf="@id/btn5"
        />

    <Button
        android:id="@+id/btnDeduct"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:background="@drawable/button"
        android:text="-"
        android:textStyle="bold"
        android:textSize="30sp"
        android:textColor="@color/BtnFunction"
        app:layout_constraintLeft_toRightOf="@id/btn6"
        app:layout_constraintTop_toTopOf="@id/btn6"
        />

    <Button
        android:id="@+id/btn1"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:background="@drawable/button"
        android:text="1"
        android:textStyle="bold"
        android:textSize="30sp"
        android:textColor="@color/white"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn4"/>

    <Button
        android:id="@+id/btn2"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:background="@drawable/button"
        android:text="2"
        android:textStyle="bold"
        android:textSize="30sp"
        android:textColor="@color/white"
        app:layout_constraintLeft_toRightOf="@id/btn1"
        app:layout_constraintTop_toTopOf="@id/btn1"
        />

    <Button
        android:id="@+id/btn3"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:background="@drawable/button"
        android:text="3"
        android:textStyle="bold"
        android:textSize="30sp"
        android:textColor="@color/white"
        app:layout_constraintLeft_toRightOf="@id/btn2"
        app:layout_constraintTop_toTopOf="@id/btn2"
        />

    <Button
        android:id="@+id/btnAdd"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:background="@drawable/button"
        android:text="+"
        android:textStyle="bold"
        android:textSize="30sp"
        android:textColor="@color/BtnFunction"
        app:layout_constraintLeft_toRightOf="@id/btn3"
        app:layout_constraintTop_toTopOf="@id/btn3"
        />

    <Button
        android:id="@+id/btn0"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:background="@drawable/button"
        android:text="0"
        android:textStyle="bold"
        android:textSize="30sp"
        android:textColor="@color/white"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn1"/>

    <Button
        android:id="@+id/btnDecimal"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:background="@drawable/button"
        android:text="."
        android:textStyle="bold"
        android:textSize="30sp"
        android:textColor="@color/white"
        app:layout_constraintLeft_toRightOf="@id/btn0"
        app:layout_constraintTop_toTopOf="@id/btn0"
        />

    <Button
        android:id="@+id/btnEquals"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:background="@drawable/equal_button"
        android:text="="
        android:textStyle="bold"
        android:textSize="30sp"
        android:textColor="@color/white"
        app:layout_constraintLeft_toRightOf="@id/btnDecimal"
        app:layout_constraintTop_toTopOf="@id/btnDecimal"
        />

</androidx.constraintlayout.widget.ConstraintLayout>